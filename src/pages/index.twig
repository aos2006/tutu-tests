ue="1" id="change-surname-1">             <label for="change-surname-1" class="choice-list__label">Да</label>             <input type="radio" name="changed-surname" class="choice-list__radio"  hidden value="0" id="change-surname-2" checked>             <label for="change-surname-2" class="choice-list__label">Нет</label>           </section>          <section class="select form__select">            <label for="citizenship" class="label select__label">Гражданство</label>            <select name="citizenship" class="select__list" role="listbox" id="citizenship">              <option value="1" role="option">Российская федерация</option>              <option value="2" role="option">Китай</option>            </select>          </section>        </div>        <div class="form__item">          <div class="input-container form__input-container">            <label for="name" class="label input-container__label">Имя</label>            <input type="text" class="input" id="name" name="name">          </div>          <section class="choice-list form__choice-list">            <h3 class="label choice-list__title">                Пол            </h3>            <input type="radio"                   class="choice-list__radio"                   hidden                   value="1"                   name="gender"                   id="gender-1"                   checked            >            <label for="gender-1" class="choice-list__label">Муж</label>            <input type="radio"                   class="choice-list__radio"                   hidden                   value="2"                   name="gender"                   id="gender-2"            >            <label for="gender-2" class="choice-list__label">Жен</label>          </section>          <section class="select form__select">            <label for="birthday" class="label select__label">Дата рождения</label>            <ul class="select__row">              <li class="select__item